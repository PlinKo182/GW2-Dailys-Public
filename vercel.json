{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/backend/server.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "FRONTEND_URL": "https://gw-2-daily.vercel.app"
  }
}
